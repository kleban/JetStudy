@using JetStudy.Core.Entities;
@using JetStudy.Repositories.DTOs.User;

@{
    ViewData["Title"] = "Користувачі";
}

@model IEnumerable<UserDto>

<div class="float-end">
    <a href="/user/create" class="btn btn-warning">Створити користувача</a>
</div>
<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Confirmed</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.FirstName @u.LastName</td>
                    <td>@u.Email</td>
                    <td> <input type="checkbox" checked="@u.IsConfirmed" disabled /></td>
                    <td> 
                        @string.Join(", ", u.Roles) 
                    </td>
                    <td>
                        <a href="/user/edit/@u.Id" class="btn btn-warning">Редагувати</a>
                        <a href="/user/delete/@u.Id" class="btn btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

       
</div>
